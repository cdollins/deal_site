<h1>Listing issues</h1>

<table class="table table-striped">
  <tr>
    <th>Publisher</th>
    <th>Import</th>
    <th>Deal</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.publisher.name %></td>
    <td><%= issue.import_id %></td>
    <td><%= link_to issue.deal.description, edit_deal_path(issue.deal) %></td>
    <td><%= issue.message %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
